<Window x:Class="OstPlayer.Views.Windows.CoverPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cover Preview" WindowStartupLocation="CenterScreen" ResizeMode="CanResize" SizeToContent="WidthAndHeight" Background="Black">
  <Border BorderBrush="Gray" BorderThickness="2" Margin="10" Background="Black">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
      <Image x:Name="CoverImage" Stretch="None"/>
    </ScrollViewer>
  </Border>
</Window>
